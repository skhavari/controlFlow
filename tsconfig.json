{
    "$schema": "https://json.schemastore.org/tsconfig",

    "compilerOptions": {
        "lib": ["DOM", "ES2022"],
        "module": "commonjs",
        "target": "ES2022",
        "types": ["node"],

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "useDefineForClassFields": true,
        "moduleResolution": "node",
        "noImplicitAny": false
    }
}
